<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guide"/>

    <LinearLayout
        android:id="@+id/medical_form"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guide"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/name"
                android:tag="thing"
                android:layout_height="45dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/inputs"
                android:padding="7dp"
                android:hint="Name"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/age"
                android:tag="age"
                android:layout_height="45dp"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_marginRight="30dp"
                android:background="@drawable/inputs"
                android:padding="7dp"
                android:hint="Age" />
            <EditText
                android:id="@+id/height"
                android:tag="height"
                android:layout_height="45dp"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_marginRight="30dp"
                android:background="@drawable/inputs"
                android:padding="7dp"
                android:hint="Height" />
            <EditText  
                android:id="@+id/weight"
                android:tag="weight"
                android:layout_height="45dp"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:background="@drawable/inputs"
                android:padding="7dp"
                android:hint="Weight" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/allergies"
                android:tag="name"
                android:layout_height="45dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/inputs"
                android:padding="7dp"
                android:hint="Allergies"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/medical_history"
                android:tag="name"
                android:layout_height="45dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/inputs"
                android:padding="7dp"
                android:hint="Medical History"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/current_conditions"
                android:tag="name"
                android:layout_height="45dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/inputs"
                android:padding="7dp"
                android:hint="Current Conditions"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/emergency_contacts"
                android:tag="name"
                android:layout_height="45dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/inputs"
                android:padding="7dp"
                android:hint="Emergency Contacts"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/local_hospitals"
                android:tag="name"
                android:layout_height="45dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/inputs"
                android:padding="7dp"
                android:hint="Local Hospitals"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_button"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/input_outline"
            android:padding="7dp"
            android:textColor="@color/white"
            android:text="Update" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>